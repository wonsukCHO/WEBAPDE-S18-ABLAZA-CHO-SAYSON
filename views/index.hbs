    <script>
        $(document).ready(() => {
            {{#if register_error}}
                $("#modalRegisterForm").modal("show"); 
                $("#register_error").removeAttr("hidden");
            {{/if}}
            
            {{#if login_error}}
                $("#modalLoginForm").modal("show");
                $("#login_error").removeAttr("hidden");
            {{/if}}
    
        });

    </script>
    
</head>

<body>
